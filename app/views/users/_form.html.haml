= form_for(@user) do |f|
  - if @user.errors.any?
    .error_explanation
      %h2= pluralize(@user.errors.count, "error")
      prohibited this user from being saved:

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :login
    %br
    = f.text_field :login

  .field
    = f.label :full_name
    %br
    = f.text_field :full_name
  
  .field
    = f.label :birthday
    %br
    = f.date_select :birthday

  .field
    = f.label :email
    %br
    = f.text_field :email

  .field
    = f.label :address
    %br
    = f.text_field :address

  .field
    = f.label :city
    %br
    = f.text_field :city

  .field
    = f.label :state
    %br
    = f.text_field :state

  .field
    = f.label :country
    %br
    = f.text_field :country

  .field
    = f.label :zip
    %br
    = f.text_field :zip

  .field
    = f.label :password
    %br
    = f.text_field :password

  .field
    = f.label :password_confirmation
    %br
    = f.text_field :password_confirmation

  .actions
    = f.submit